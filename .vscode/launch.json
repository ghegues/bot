{
    "configurations": [
        {
            "name": "Nodemon Launch Server",
            "type": "node",
            "request": "launch",
            "cwd": "${workspaceRoot}",
            "runtimeExecutable": "nodemon",
            "runtimeArgs": [
                "--inspect=5858"
            ],
            "program": "${workspaceRoot}/bot.js",
            "restart": true,
            "port": 5858,
            "console": "integratedTerminal",
            "internalConsoleOptions": "neverOpen"
           }
    ]
}